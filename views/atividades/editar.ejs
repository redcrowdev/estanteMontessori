<%- include('../partials/head') %>
   <div class="col-6 offset-3">
      <h1 class="text-center">Editar Atividade</h1>

      <form action="/atividades/<%= activity._id %>?_method=PUT" method="POST">
         <div class="mb-2">
            <label class="form-label" for="title">Título</label>
            <input class="form-control" value="<%= activity.title %>" type="text" id="title" name="activity[title]">
         </div>
         <div class="mb-2">
            <label class="form-label" for="ages">Idade</label>
            <input class="form-control" value="<%= activity.ages %>" type="text" id="ages" name="activity[ages]">
         </div>
         <div class="mb-2">
            <label class="form-label" for="sensiblePeriod">Período Sensível</label>
            <select class="form-select" id="sensiblePeriod" name="activity[sensiblePeriod]">
               <option value="<%= activity.sensiblePeriod %>" selected hidden>
                  <%= activity.sensiblePeriod %>
               </option>
               <option value="Movimento">Movimento</option>
               <option value="Linguagem">Linguagem</option>
               <option value="Detalhes">Detalhes</option>
               <option value="Ordem">Ordem</option>
               <option value="Desenvolvimento dos Sentidos">Desenvolvimento dos Sentidos</option>
               <option value="Refinamento dos Sentidos">Refinamento dos Sentidos</option>
               <option value="Graça e Cortesia">Graça e Cortesia</option>
               <option value="Música e Ritmo">Música e Ritmo</option>
               <option value="Escrita">Escrita</option>
               <option value="Leitura">Leitura</option>
               <option value="Matemática">Matemática</option>
            </select>
         </div>
         <div class="mb-2">
            <label class="form-label" for="category">Categoria</label>
            <input class="form-control" value="<%= activity.category %>" type="text" id="category"
               name="activity[category]">
         </div>
         <div class="mb-2">
            <label class="form-label" for="theme">Tema</label>
            <input class="form-control" value="<%= activity.theme %>" type="text" id="theme" name="activity[theme]">
         </div>
         <div class="mb-2">
            <label class="form-label" for="description">Descrição</label>
            <textarea class="form-control" id="description" name="activity[description]">
               <%= activity.description.trim() %>
            </textarea>
         </div>
         <div class="mb-2">
            <label class="form-label" for="owned">Possui?</label>
            <select class="form-select id=" owned" name="activity[owned]">
               <option value="<%= activity.owned %>" selected hidden>
                  <%= activity.owned %>
               </option>
               <option value="Não">Não</option>
               <option value="Sim">Sim</option>
            </select>
         </div>
         <div class="mb-2">
            <label class="form-label" for="picture">Imagem</label>
            <input class="form-control" value="<%= activity.picture %>" type="text" id="picture"
               name="activity[picture]">
         </div>
         <button class="btn btn-primary mt-2
            ">Editar</button>
      </form>
      <a href="/atividades/<%=activity._id%>">Voltar à Atividade</a>
   </div>








