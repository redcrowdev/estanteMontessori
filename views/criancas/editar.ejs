<%- include('../partials/head') %>
   <div class="col-6 offset-3">
      <h1 class="text-center">Editar Criança</h1>

      <form action="/criancas/<%= child._id %>?_method=PUT" method="POST" novalidate class="validate">
         <div class="mb-2">
            <label class="form-label" for="firstName">Nome:</label>
            <input class="form-control" value="<%= child.firstName %>" type="text" id="firstName"
               name="child[firstName]" required>
         </div>
         <div class="mb-2">
            <label class="form-label" for="lastName">Sobrenome:</label>
            <input class="form-control" value="<%= child.lastName %>" type="text" id="lastName" name="child[lastName]"
               required>
         </div>

         <div class="mb-2">
            <label class="form-label" for="birth">Data de Nascimento</label>
            <input class="form-control" value="<%= child.birth %>" type="date" id="birth" name="child[birth]" required>
         </div>

         <div class="mb-2">
            <label class="form-label" for="gender">Gênero</label>
            <select class="form-select" id="gender" name="child[gender]" required>
               <option value="<%= child.gender %>" selected hidden>
                  <%= child.gender %>
               </option>
               <option value="Femenino">femenino</option>
               <option value="Masculino">masculino</option>
            </select>
         </div>

         <div class="mb-2">
            <label class="form-label" for="picture">Imagem</label>
            <input class="form-control" value="<%= child.picture %>" type="text" id="picture" name="child[picture]"
               required>
         </div>
         <button class="btn btn-primary mt-2
            ">Editar</button>
      </form>
      <a href="/criancas/<%=child._id%>">Voltar à Criança</a>
   </div>


   <%- include('../partials/foot') %>

      <script type="text/javascript" src="/public/scripts/functions.js"></script>
      <script>bootstrapFormValidation()</script>